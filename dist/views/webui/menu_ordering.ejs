<!-- Order button -->
<div class="d-grid gap-2 fixed-bottom mx-1 my-1" v-if="selectedSession">
  <button class="btn btn-lg btn-primary py-4" data-bs-toggle="offcanvas" data-bs-target="#oc_ordering" aria-controls="oc_ordering">Bestellen</button>
</div>

<!-- Order Category Overview-->
<div class="offcanvas offcanvas-start" tabindex="-1" id="oc_ordering" aria-labelledby="oc_ordering_label">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="oc_ordering_label">Bestellen</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="d-grid gap-2">
      <template v-for="c in categories">
        <button class="btn btn-lg btn-outline-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#oc_ordering_detail" aria-controls="oc_ordering_detail" @click="fetchCategoryProducts(c.id)">{{c.name}}</button>
      </template>
      <template v-for="s in stations">
        <button class="btn btn-lg btn-outline-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#oc_ordering_detail" aria-controls="oc_ordering_detail" @click="fetchStationProducts(s.id)">{{s.name}}</button>
      </template>
    </div>

  </div>
</div>




<!-- Products list -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="oc_ordering_detail" aria-labelledby="oc_ordering_detail_label">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="oc_ordering_detail_label">Bestellen</h5>

    <!-- Order Success Icon -->
    <img v-if="orderSuccess" src="/images/icons8-checkmark.gif" height="25" width="25">

    <button type="button" class="btn-close text-reset" aria-label="Close" data-bs-toggle="offcanvas" data-bs-target="#oc_ordering" aria-controls="oc_ordering"></button>
  </div>
  <div class="offcanvas-body">

    <!-- Generate Content from Productlist -->
    <!-- Simple Products without any options or variations -->
    <template v-for="p in products">
      <button v-if="!p.ingredients.length && !p.variations.length" class="btn btn-lg btn-outline-primary py-2 px-3 mx-1 my-1" @click="orderProduct(p.id,null,false)">{{p.name}}</button>
    </template>

    <!-- Accordion for complex products and variations -->
    <div class="accordion" id="accordionExample">
      <div class="d-grid gap-2">

        <!-- Product with variations -->
        <template v-for="p in products">
          <template v-if="!p.ingredients.length && p.variations.length">
            <div class="my-1">
              <div class="accordion-item">
                <!-- Accordion Header -->
                <div class="accordion-header card-header ps-0 pe-0 py-1" :id="'varheading-'+p.id">
                  <button class="btn text-start" type="button" style="width: 100%;" data-bs-toggle="collapse" :data-bs-target="'#varcollapse-'+p.id" aria-expanded="true" :aria-controls="'varcollapse-'+p.id">
                    {{p.name}}
                  </button>
                </div>
                <!-- Accordion Content -->
                <div :id="'varcollapse-'+p.id" class="accordion-collapse collapse" :aria-labelledby="'varheading-'+p.id" data-bs-parent="#accordionExample">
                  <div class="accordion-body py-1">
                    <template v-for="v in p.variations">
                      <button class="btn btn-secondary py-2 px-3 mx-2 my-1" @click="orderProduct(p.id, v.id,false)">{{v.attrname}}</button>
                    </template>
                  </div>
                </div>
              </div>
            </div>
          </template>
        </template>

        <!-- Complex Products with ingredients -->
        <template v-for="p in products">
          <template v-if="p.ingredients.length && !p.variations.length">
            <div class="my-1">
              <!-- Accordion Header -->
              <div class="accordion-item">
                <div class="accordion-header card-header ps-0 pe-1" :id="'compheading-'+p.id">
                  <div class="row">
                    <button class="btn text-start col-9 ps-3" type="button" data-bs-toggle="collapse" :data-bs-target="'#compcollapse-'+p.id" aria-expanded="true" aria-controls="'compcollapse-'+p.id">
                      {{p.name}}
                    </button>
                    <!-- Bestellsteuerung -->
                    <div class="col-3">
                      <button class="btn btn-secondary ms-1 float-end" style="width:100%" @click="orderProduct(p.id, null,true)">
                        <img src="/images/sent.png" style="height: 15px">
                      </button>
                    </div>
                  </div>
                </div>
                <!-- Accordion Content -->
                <div :id="'compcollapse-'+p.id" class="accordion-collapse collapse" :aria-labelledby="'compheading-'+p.id" data-bs-parent="#accordionExample">
                  <div class="row row-cols-2 mt-1 px-1">
                    <!-- Optionen -->
                    <template v-for="o in p.ingredients">
                      <div class="col mb-1">
                        <input v-if="!o.optional" type="checkbox" class="btn-check" :value="o.ingredient.id" name="option" :id="p.id+'-option-'+o.ingredient.id">
                        <input v-else type="checkbox" class="btn-check" :value="o.ingredient.id" name="option" :id="p.id+'-option-'+o.ingredient.id" checked>
                        <label class="btn btn-outline-primary" style="width:100%" :for="p.id+'-option-'+o.ingredient.id">
                          {{o.ingredient.name}}
                        </label>
                      </div>
                    </template>
                  </div>
                  <input type="text" class="form-control" placeholder="Notiz" :id="p.id+'note'" autocomplete="off">
                </div>
              </div>
            </div>
          </template>
        </template>
        <p v-if="!products.length">Keine Produke gefunden</p>
      </div>
    </div>



  </div>
</div>