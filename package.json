{
    "name": "festivalmanager",
    "version": "1.1.12",
    "description": "A order management system for festivals",
    "main": "app.js",
    "bin": "dist/app.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "npx tsc",
        "start": "node dist/app.js",
        "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/app.js \"",
        "increment": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./increment-version-package.ps1 ./package.json ",
        "dev-inc": "npm run increment && npm run dev",
        "pack": "pkg package.json",
        "move": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./release.ps1",
        "release": "npm run pack && npm run move"
    },
    "pkg": {
        "scripts": [
            "dist/*.js",
            "dist/entity/*.js",
            "dist/routes/*.js"
        ],
        "assets": [
            "dist/views/**/*",
            "dist/public/**/*"
        ],
        "targets": [
            "node14-win-x64",
            "node14-linux-arm64"
        ],
        "output": "releases/",
        "compress": "GZip"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@knuckleswtf/scribe-express": "^2.0.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/ejs": "^3.1.1",
        "@types/express-session": "^1.17.5",
        "@types/multer": "^1.4.7",
        "body-parser": "^1.20.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.0.1",
        "ejs": "^3.1.8",
        "express": "^4.18.1",
        "express-session": "^1.17.3",
        "express-validator": "^6.14.2",
        "fs-extra": "^11.1.1",
        "helmet": "^7.0.0",
        "minimist": "^1.2.8",
        "multer": "^1.4.5-lts.1",
        "mysqldump": "^3.2.0",
        "pg": "^8.7.3",
        "rand-token": "^1.0.1",
        "reflect-metadata": "^0.1.13",
        "sqlite3": "^5.1.6",
        "typeorm": "^0.3.7",
        "vuejs-smart-table": "^0.0.8"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^18.0.6",
        "concurrently": "^7.3.0",
        "nodemon": "^2.0.19",
        "typescript": "^4.7.4"
    }
}
