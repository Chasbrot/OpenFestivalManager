<!DOCTYPE html>
<html lang="en">

<head>
    <title>Tisch</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css">
    <script src="/javascripts/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
        crossorigin="anonymous"></script>
</head>

<body>

    <!-- Nav bar -->
    <nav class="navbar navbar-expand-ti navbar-dark bg-dark">
        <a class="navbar-brand" href="/personal/personal_overview">Ãœbersicht</a>
        <ul class="navbar-nav mr-auto">
        </ul>
        <a class="navbar-brand " href="">Neuer Tisch</a>
    </nav>
    <br>
    <form action="tisch_neu" method="POST">
        <div class="card">
            <div class="card-body">
                <h3>Kategorie</h3>
                <% if(table_groups.length){%>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <% for(var i=0; i< table_groups.length; i++) {%>
                            <label class="btn btn-primary btn-lg">
                                <input type="radio" name="table_group" id="option<%= table_groups[i].id%>"
                                    value="<%= table_groups[i].id%>" autocomplete="off">
                                <%= table_groups[i].groupname%>
                            </label>
                            <% } %>
                    </div>
                    <% }else{ %>
                        <div class="list-group-item">
                            Keine Tisch Gruppen definiert
                        </div>
                        <% } %>

            </div>
            <div class="card-body">
                <h3>Tisch</h3>
                <% if(tables.length){%>
                    <select class="custom-select" id="table" name="table">
                        <option selected value="">Choose...</option>
                        <% for(var i=0; i< tables.length; i++) {%>
                            <option value="<%= tables[i].id%>">
                                <%= tables[i].nummer%>
                            </option>
                            <% } %>
                    </select>
                    <% }else{ %>
                        Keine Tische definiert
                        <% } %>

            </div>

        </div>


        <!-- Neuer Tisch -->
        <div class="fixed-bottom text-center">
            <button class="btn btn-primary btn-lg btn-block" type="submit" name="new_session" value="true">Start</button>
        </div>
    </form>

</body>

</html>